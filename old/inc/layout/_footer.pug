+c.pagetop
  +a("#").c-pagetop__button.js-anchor(data-anchor-target="body") <i class="fa fa-angle-up" aria-hidden="true"></i>
+c.footer-menu
  .l-container
    +e.inner
      +e.block
        ul.c-footer-menu__list
          li: +a("/") ホーム
          li: +a("/aboutus/") 私たちについて
          li: +a("/case/") 導入事例
      +e.block
        +e.title <span>企業情報</span>
        ul.c-footer-menu__list.is-sub
          li: +a("/company/greeting/") 代表あいさつ
          li: +a("/company/profile/") 会社概要
          li: +a("/company/history/") 沿革
          li: +a("/recruit/") 採用情報
      +e.block
        +e.title <span>事業紹介</span>
        ul.c-footer-menu__list.is-sub
          li: +a("/service/traning/") 社員研修事業
          li: +a("/service/project-management/") プロジェクトマネジメント事業
          li: +a("/service/system/") システム開発事業
      +e.block
        +e.title <span>お知らせ</span>
        ul.c-footer-menu__list.is-sub
          li: +a("/news/") 更新情報
          li: +a("/news/") ニュースリリース
      +e.block
        ul.c-footer-menu__list
          li: +a("/blog/") 企業ブログ
          li: +a("/media/") 企業メディア
          li: +a("/faq/") よくあるご質問
          li: +a("/voice/") お客様の声
          li: +a("/contact/") お問い合わせ
footer.l-footer
  .l-container
    .l-footer__inner
      +a("/").l-footer__logo: +img("logo_white.png","株式会社サンプル")
      ul.l-footer__menu
        li: +a("/sitemap/") サイトマップ
        li: +a("/privacy-policy/") 個人情報保護方針
      small.l-footer__copyright Copyright © Sample Co.,Ltd. All Rights Reserved.
