  .l-container
    ul
      each item in nav("global_nav")
        li
          +a(item.url)!= item.text
          .l-global-nav-simple__submenu
            ul
              li: a(href="#") 会社概要
              li: a(href="#") 会社概要
              li: a(href="#") 会社概要
              li: a(href="#") 会社概要
              li: a(href="#") 会社概要

          if item.children
            ul
            each child_item in item.children
              li
                +a(child_item.url)!= child_item.text
