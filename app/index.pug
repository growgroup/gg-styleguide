            +e.LI.navs-item
              +e.navs-title 中国・四国
              +e.navs-links
                +ae("#itemContent").navs-link.js-anchor(data-tab-target="15") 岡山県
                +ae("#itemContent").navs-link.js-anchor(data-tab-target="16") 広島県
