mixin c_main-visual
  +c.main-visual
    +e.wrapper.swiper
      +e.slider.swiper-wrapper
        +loop(3)
          +e.image.swiper-slide
            +picture("img-main-visual-01.jpg", "img-sample.jpg","", 1600, 620, 803, 451)
