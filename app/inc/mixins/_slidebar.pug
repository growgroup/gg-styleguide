//- スマホメニュー
mixin c_slidebar
  //-> スマホメニューのボタン
  +c("button").slidebar-button.js-slidebar-button(type="button")
    +e("span").inner
      +e("span").line
        //- .text が存在するときは.u-visually-hidden要素不要
        span.u-visually-hidden メニューを開閉する
      +e("span").text.is-open MENU
      +e("span").text.is-close CLOSE

  +c.slidebar-menu.js-slidebar-menu.is-top-to-bottom(inert="inert")
    +ul.list
      +li.parent.js-accordion
        +span.parent-link(data-accordion-title='menu-title') メニュー レベル1
        //子ページ
        +ul.children(data-accordion-content='menu-content')
          +li.child.js-accordion
            +span.child-link(data-accordion-title='menu-title') メニュー レベル2
            //孫ページ
            +ul.grandchildren(data-accordion-content='menu-content')
              +loop(2)
                +li.grandchild: +ae("#").grandchild-link メニュー レベル3
          +li.child.js-accordion
            +span.child-link(data-accordion-title='menu-title') メニュー レベル2
            //孫ページ
            +ul.grandchildren(data-accordion-content='menu-content')
              +loop(2)
                +li.grandchild: +ae("#").grandchild-link メニュー レベル3
          +li.child: +ae("#").child-link メニュー レベル2
          +li.child: +ae("#").child-link メニュー レベル2
        //子ページ
        +ul.children(data-accordion-content='menu-content')
          +loop(2)
            +li.child: +ae("#").child-link メニュー レベル2
      +li.parent.js-accordion
        +span.parent-link(data-accordion-title='menu-title') メニュー レベル1
        +ul.children(data-accordion-content='menu-content')
          +li.child.js-accordion
            +span.child-link(data-accordion-title='menu-title') メニュー レベル2
            +ul.grandchildren(data-accordion-content='menu-content')
              +loop(2)
                li.c-slidebar-menu__grandchild: +a("#").c-slidebar-menu__grandchild-link メニュー レベル3
          +loop(2)
            +li.child: +ae("#").child-link メニュー レベル2
        +ul.children(data-accordion-content='menu-content')
          +li.child.js-accordion
            +span.child-link(data-accordion-title='menu-title') メニュー レベル2
            +ul.grandchildren(data-accordion-content='menu-content')
              +loop(2)
                +li.grandchild: +ae("#").grandchild-link メニュー レベル3
          +loop(2)
            +li.child: +a("#").child-link メニュー レベル2
      +loop(3)
        +li.parent: +ae("#").parent-link メニュー レベル1

    .l-container
      +e.buttons
        +ae("#").button.c-button
          +span.button__icon.c-icon-font(aria-hidden="true") mail_outline
          |お問い合わせ
