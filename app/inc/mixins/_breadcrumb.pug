//- パンくずリスト
mixin c_breadcrumb(parent,parentURL,parent2,parentURL2)
  if parent2
    +c.breadcrumb
      .l-container
        +e.inner
          span: +a("/") ホーム
          span >
          span: +a('/' + parentURL + '/')=parent
          span >
          span: +a('/' + parentURL +'/' + parentURL2 + '/')=parent2
          span >
          span=current.title
  else if parent
    +c.breadcrumb
      .l-container
        +e.inner
          span: +a("/") ホーム
          span >
          span: +a('/'+parentURL+'/')=parent
          span >
          span=current.title
  else
    +c.breadcrumb
      .l-container
        +e.inner
          span: +a("/") ホーム
          span >
          span=current.title
