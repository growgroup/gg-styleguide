//- ページヘッダー
mixin l_page_header(data)
  -
    if (data.tag) {
      var tag = data.tag
    } else {
      var tag = "h1"
    }
  .l-page-header
    .l-page-header__image
      +img(data.image)
    .l-page-header__inner
      .l-page-header__subtitle !{data.subtitle}
      #{tag}.l-page-header__title !{data.title}

