//- 2カラムのベースファイル
extends /inc/foundation/_head.pug
block layout
  //- ヘッダー
  block header
    include /inc/layout/_header.pug

  //- スマホメニュー用のコンテナ

  // ページヘッダー
  block page_header
  -
    var className = "l-main.is-two-column"

    if (current.id == "result") {
      className = "l-main is-two-column is-search"
    }

  main(class=className)
    .l-container
      .l-wrapper
        block body

      aside.l-aside
        block aside

  +l_offer
  //- フッター
  block footer
    include /inc/layout/_footer.pug
