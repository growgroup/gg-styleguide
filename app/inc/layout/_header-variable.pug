.l-header-variable
  .l-header-variable__content
    h1.l-header-variable__heading: +a("/"): +img("logo-recruit.png","株式会社●● 採用サイト")
    nav.l-header-variable__nav
      .l-header-variable__inner
        a(href="tel: 00-0000-0000").l-header-variable__tel
          span 00-0000-0000
      ul
        li: +a("/recruit/")
          span HOME
          small ホーム
        li: +a("/recruit/business/")
          span BUSINESS
          small 事業内容
        li: +a("/recruit/reserch/")
          span RESEARCH
          small リサーチ
        li: +a("/recruit/company/")
          span COMPANY
          small 会社案内
        li: +a("/recruit/policy/")
          span POLICY
          small DFVのポリシー
    +a("/recruit/contact/").l-header-variable__button.c-button.is-sm <i class="fa fa-envelope-o" aria-hidden="true"></i>
      span CONTACT
      small お問い合わせ
