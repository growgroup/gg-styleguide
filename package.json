{
  "name": "grow-template",
  "version": "2.0.0",
  "description": "Grow Template - Using  Pug && Sass.",
  "engines": {
    "node": ">=20.12.2"
  },
  "scripts": {
    "start": "npm run develop -s",
    "init": "npm install",
    "server": "node ./server.js",
    "build": "run-s build:*",
    "develop": "run-p server develop:*",
    "build:css": "run-s webpack-css-production make-admin-style prepend-selector-admin-style",
    "webpack-css-production": "webpack --config webpack.style.config.babel.js --mode production",
    "build:webpack": "webpack --config webpack.config.babel.js --mode production",
    "develop:webpack": "webpack --config webpack.config.babel.js --mode development  --watch --watch-options-stdin --progress",
    "build:pug": "pug -O build/pug.js app --out dist -s",
    "build:wp": "node build/wp.js",
    "build:autoprefixer": "postcss -o dist/assets/css/style.css dist/assets/css/style.css",
    "make-admin-style": "postcss -o dist/assets/css/admin-style.css dist/assets/css/style.css",
    "prepend-selector-admin-style": "postcss -o dist/assets/css/admin-style.css dist/assets/css/admin-style.css",
    "lint:html": "markuplint \"./dist/**/*.html\"",
    "lint:scss": "stylelint \"./app/**/*.scss\" --fix",
    "lint": "run-s --continue-on-error lint:*"
  },
  "author": "GrowGroup",
  "devDependencies": {
    "@babel/cli": "^7.25.6",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/register": "^7.24.6",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "copy-webpack-plugin": "^12.0.2",
    "core-js": "^3.38.1",
    "css-loader": "^7.1.2",
    "fast-sass-loader": "^2.0.1",
    "file-loader": "^6.2.0",
    "import-glob-loader": "^1.1.0",
    "jquery": "^3.7.1",
    "markuplint": "^2.11.4",
    "mini-css-extract-plugin": "^2.9.1",
    "node-notifier": "^10.0.1",
    "node-sass-glob-importer": "^5.3.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.2",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^8.1.1",
    "postcss-prefix-selector": "^1.16.1",
    "postcss-pxtorem": "^6.1.0",
    "postcss-scss": "^4.0.9",
    "postcss-sort-media-queries": "^5.2.0",
    "pug": "^3.0.3",
    "pug-cli": "git+https://github.com/pugjs/pug-cli.git",
    "rimraf": "^6.0.1",
    "sass": "^1.78.0",
    "sass-loader": "^16.0.2",
    "style-loader": "^4.0.0",
    "stylelint": "^16.14.1",
    "stylelint-scss": "^6.8.1",
    "stylelint-webpack-plugin": "^5.0.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-remove-empty-scripts": "^1.0.4"
  },
  "dependencies": {
    "@fontsource-variable/roboto-flex": "^5.1.1",
    "@fontsource/material-icons": "^5.1.0",
    "@fontsource/material-icons-outlined": "^5.1.0",
    "@fontsource/material-icons-round": "^5.1.0",
    "@fontsource/material-icons-sharp": "^5.1.0",
    "@fontsource/material-icons-two-tone": "^5.1.0",
    "@fontsource/noto-sans-jp": "^5.1.0",
    "gsap": "^3.12.5",
    "imagesloaded": "^5.0.0",
    "lenis": "^1.1.18",
    "lottie-web": "^5.12.2",
    "micromodal": "^0.4.10",
    "modaal": "^0.4.4",
    "owl.carousel": "^2.3.4",
    "scroll-hint": "^1.2.5",
    "simple-parallax-js": "^5.6.2",
    "slick-carousel": "^1.8.1",
    "swiper": "^8.4.7"
  },
  "skipInheritances": [
    "node_modules"
  ],
  "main": "postcss.config.js",
  "browserslist": [
    "last 3 versions",
    "not dead",
    "iOS >= 15",
    "Safari >= 15"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/growgroup/gg-styleguide.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/growgroup/gg-styleguide/issues"
  },
  "homepage": "https://github.com/growgroup/gg-styleguide#readme"
}
