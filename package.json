{
  "name": "grow-template",
  "version": "2.0.0",
  "description": "Grow Template - Using  Pug && Sass.",
  "engines": {
    "node": ">=16.14.0"
  },
  "scripts": {
    "start": "npm run develop -s",
    "init": "npm install",
    "server": "node ./server.js",
    "build": "run-s build:*",
    "develop": "run-p server develop:*",
    "build:css": "run-s webpack-css-production make-admin-style prepend-selector-admin-style",
    "webpack-css-production": "webpack --config webpack.style.config.babel.js --mode production",
    "develop:css": "webpack --config webpack.style.config.babel.js --mode development --watch --watch-options-stdin --progress",
    "build:webpack": "webpack --config webpack.config.babel.js --mode production",
    "develop:webpack": "webpack --config webpack.config.babel.js --mode development  --watch --watch-options-stdin --progress",
    "build:pug": "pug -O build/pug.js app --out dist -s",
    "build:wp": "node build/wp.js",
    "build:autoprefixer": "postcss -o dist/assets/css/style.css dist/assets/css/style.css",
    "make-admin-style": "postcss -o dist/assets/css/admin-style.css dist/assets/css/style.css",
    "prepend-selector-admin-style": "postcss -o dist/assets/css/admin-style.css dist/assets/css/admin-style.css",
    "lint:html": "markuplint \"./dist/**/*.html\""
  },
  "author": "GrowGroup",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/register": "^7.16.5",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "core-js": "^3.21.1",
    "css-loader": "^6.5.1",
    "fast-sass-loader": "^2.0.1",
    "file-loader": "^6.2.0",
    "import-glob-loader": "^1.1.0",
    "markuplint": "^2.11.4",
    "mini-css-extract-plugin": "^2.4.5",
    "node-notifier": "^10.0.0",
    "node-sass-glob-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^7.3.3",
    "postcss-prefix-selector": "^1.16.0",
    "postcss-sort-media-queries": "^5.2.0",
    "pug": "^3.0.2",
    "pug-cli": "git+https://github.com/pugjs/pug-cli.git",
    "rimraf": "^5.0.5",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "watch": "^1.0.2",
    "webpack": "^5.65.0",
    "webpack-cli": "^5.1.4",
    "copy-webpack-plugin": "^11.0.0",
    "jquery": "^3.6.0"
  },
  "dependencies": {
    "@fontsource/material-icons": "^5.0.5",
    "@fontsource/material-icons-outlined": "^5.0.5",
    "@fontsource/material-icons-round": "^5.0.5",
    "@fontsource/material-icons-sharp": "^5.0.5",
    "@fontsource/material-icons-two-tone": "^5.0.5",
    "@fontsource/noto-sans-jp": "^5.0.17",
    "@fontsource/roboto": "^5.0.8",
    "animejs": "^3.2.1",
    "gsap": "^3.9.1",
    "imagesloaded": "^5.0.0",
    "infiniteslidev2": "^2.0.1-1",
    "modaal": "^0.4.4",
    "owl.carousel": "^2.3.4",
    "scroll-hint": "^1.2.5",
    "simple-parallax-js": "^5.6.2",
    "slick-carousel": "^1.8.1",
    "swiper": "^8.4.7",
    "url": "^0.11.0"
  },
  "skipInheritances": [
    "node_modules"
  ],
  "main": "postcss.config.js",
  "browserslist": [
    "last 3 versions",
    "not dead",
    "iOS >= 14",
    "Safari >= 14"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/growgroup/gg-styleguide.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/growgroup/gg-styleguide/issues"
  },
  "homepage": "https://github.com/growgroup/gg-styleguide#readme"
}
